{
  "name": "snips-cli",
  "version": "1.3.0",
  "description": "Gist backed commandline snippet utility",
  "main": "app.js",
  "scripts": {
    "run": "node app.js",
    "lint": "eslint -c package.json ./**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srijanshetty/snips.git"
  },
  "keywords": [
    "gist",
    "snippets",
    "code",
    "snips"
  ],
  "author": "Srijan R Shetty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/srijanshetty/snips/issues"
  },
  "homepage": "https://github.com/srijanshetty/snips#readme",
  "dependencies": {
    "chalk": "^1.0.0",
    "commander": "^2.8.1",
    "copy-paste": "^1.1.2",
    "front-matter": "^1.0.0",
    "lodash": "^4.17.15",
    "shelljs": "^0.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "eslint-plugin-node": "^11.0.0",
    "husky": "^3.0.8"
  },
  "preferGlobal": "true",
  "bin": {
    "snips": "app.js"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ]
  },
  "prettier": {
      "semi": true,
      "singleQuote": true,
      "trailingComma": "es5"
  },
  "commitlint": {
      "extends": [
          "@commitlint/config-conventional"
      ],
      "rules": {
          "type-enum": [
              1,
              "always",
              [
                  "build",
                  "cfg",
                  "chore",
                  "docs",
                  "feat",
                  "fix",
                  "lint",
                  "refactor",
                  "revert"
              ]
          ]
      }
  },
  "husky": {
      "hooks": {
          "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
          "pre-push": "npm run lint"
      }
  }
}
